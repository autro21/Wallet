<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        app:cardMaxElevation="8dp"

        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"

        android:backgroundTint="#37888383"
        android:background="#37888383"

>
<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
    <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todoCheckbox"
            tool:text="this is a simple task on our application."
            android:paddingStart="8dp"
            android:buttonTint="@android:color/holo_green_dark"
            tool:checked="true"
            android:layout_marginBottom="8dp"

            android:minLines="3" android:layout_marginTop="8dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/todoCheckbox"
            android:layout_marginLeft="24dp">

        <TextView
                android:text=" DUE DATE  "
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/due_view"
                android:padding="8dp"

                android:layout_marginStart="8dp" android:textSize="14sp" android:textColor="#000000"
                android:textStyle="bold|italic" android:layout_marginBottom="24dp" android:visibility="invisible"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_end_date"

                android:padding="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:textColor="#FF0000" android:textSize="14sp"
                android:textStyle="bold|italic"/>
    </LinearLayout>
</RelativeLayout>
</com.google.android.material.card.MaterialCardView>
